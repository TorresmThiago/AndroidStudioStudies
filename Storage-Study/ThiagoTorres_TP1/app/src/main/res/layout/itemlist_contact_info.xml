<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="325dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:background="#FFF">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"
        android:src="@drawable/ic_close"
        android:onClick="CloseContactInfo"/>

    <TextView
        android:id="@+id/contactInfoNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contato" />

    <TextView
        android:id="@+id/contactInfoTelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contactInfoNome"
        android:text="Contato" />

    <TextView
        android:id="@+id/contactInfoEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contactInfoTelefone"
        android:text="Contato" />

    <TextView
        android:id="@+id/contactInfoCidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contactInfoEmail"
        android:text="Contato" />




</RelativeLayout>